<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
 "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
    <interface name="org.freedesktop.miracast.Manager">
        <method name="RegisterMediaManager">
            <arg name="path" type="o" direction="in"/>
        </method>
        <method name="UnregisterMediaManager">
            <arg name="path" type="o" direction="in"/>
        </method>
        <method name="Scan"/>
        <method name="ConnectSink">
            <arg name="address" type="s" direction="in"/>
        </method>
        <property name="State" type="s" access="read"/>
    </interface>
    <interface name="org.freedesktop.miracast.Device">
        <method name="Connect">
            <arg name="role" type="s" direction="in"/>
        </method>
        <method name="Disconnect"/>
    </interface>
    <interface name="org.freedesktop.miracast.MediaManager">
        <method name="Configure">
            <arg name="address" type="s"/>
            <arg name="port" type="i"/>
        </method>
        <method name="Play"/>
        <method name="Pause"/>
        <method name="Teardown"/>
    </interface>
</node>
